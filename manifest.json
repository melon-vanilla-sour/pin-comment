{
  "manifest_version": 3,
  "name": "Pin YouTube Comment",
  "version": "1.0",
  "description": "Pin a YouTube comment to the right side of the video",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["style.css"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ]
}
